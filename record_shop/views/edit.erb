<form action="/products/<%= @product.id %>" method="post" autocomplete="off">

  <label for="artist">Artist</label>
  <input id='artist' type="text" name='artist' value="<%= @product.artist %>" required>
  <br>

  <label for="title">Title</label>
  <input id="title" type="text" name="title" value="<%= @product.title %>" required>
  <br>

  <select id="genre" name="genre_id">
    <% @genres.each do |genre| %>
    <% %>
    <option value="<%= genre.id %>"<%="selected" if genre.id == @product.genre_id %>><%= genre.name %></option>
    <% end %>
  </select><br>

  <select id="record-label" name="record_label_id" >
    <% @record_labels.each do |label| %>
    <option value="<%= label.id %>"
      <%="selected" if label.id == @product.record_label_id %>>
      <%= label.name %>
    </option>
    <% end %>
  </select><br>

  <select id="year" name="year_id">
    <% @years.each do |year| %>
    <option value="<%= year.id %>" <%="selected" if year.id == @product.year_id %>><%= year.year %></option>
    <% end %>
  </select><br>

  <select id="format" name="format_id">
    <option selected disabled>Choose Format</option>
    <% @formats.each do |format| %>
    <option value="<%= format.id %>" <%="selected" if format.id == @product.format_id %>><%= format.type %></option>
    <% end %>
  </select><br>

  <label for="cost-price">Cost Price</label>
  <input id="cost-price" type="number" step="0.01" name="cost_price" required min="0" value="<%= @product.cost_price %>"><br>

  <label for="retail-price">Retail Price</label>
  <input id="retail-price" type="number" step="0.01" name="retail_price" required min="0" value="<%= @product.retail_price %>"><br>

  <label for="quantity">Quantity</label>
  <input id="quantity" type="number" name="quantity" min="0" value="<%= @product.quantity %>" required><br>

  <label for="img-url">Album Artwork URL</label>
  <input id="img-url" type="text" name="img_url" value="<%= @product.img_url %>" required><br>

  <input type="submit" value="Save Changes">
</form>
