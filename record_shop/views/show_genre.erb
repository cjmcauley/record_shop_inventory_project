<h2>All Products</h2>
<p></p>
<hr>
<table class="flex-item">
  <tr>
    <th>Artist</th>
    <th>Title</th>
    <th>Genre</th>
    <th>Record Label</th>
    <th>Year</th>
    <th>Format</th>
    <th>Cost Price</th>
    <th>Retail Price</th>
    <th>Mark Up</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.artist %></td>
    <td><%= product.title %></td>
    <td><a class="table" href="/genres/<%= product.genre_id %>/show"><%= product.genre.name %></td>
    <td><a class="table" href="/record-labels/<%= product.record_label_id %>/show"><%= product.record_label.name %></a></td>
    <td><%= product.year.year %></td>
    <td><%= product.format.type %></td>
    <td class="center">£<%= "%.2f" % product.cost_price %></td>
    <td class="center">£<%= "%.2f" % product.retail_price %></td>
    <td><%= (((product.retail_price) - (product.cost_price)) / (product.cost_price) * 100).round(2) %>%</td>
    <td class="center"><%= product.quantity %></td>
    <% if product.quantity == 0 %>
      <td class="warning">out of stock</td>
      <% elsif product.quantity <= 5 %>
      <td class="low">low stock</td>
      <% else %>
      <td class="in-stock">in stock
      <% end %></td>
    <td><form action="/products/<%= product.id %>/edit" method="get">
      <input type="submit" value="Edit">
    </form>
  </td>
    <td>
      <form action="/products/<%= product.id %>/delete" method="post">
        <input type="submit" value="Delete">
      </form>
    </td>
    <td>
      <form action="/products/<%= product.id %>" method="get">
        <input type="submit" value="Details">
      </form>
    </td>
  </tr>
  <% end %>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td>
    <form action="/products" method="get">
      <input type="submit" value="Back">
    </form>
  </td>
</table>
