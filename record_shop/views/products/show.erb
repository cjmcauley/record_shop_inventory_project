<div class="homepage">

  <div class="container">
    <div class="album-artwork">
      <img class="details-img" src="<%= @product.img_url %>" alt="">
    </div>
    <div class="details">
      <table class="products">
        <tr>
          <th scope="row">Artist</th>
          <td><%= @product.artist %></td>
        </tr>
        <tr>
          <th scope="row">Album</th>
          <td><%= @product.title %></td>
        </tr>
        <tr>
          <th scope="row">Genre</th>
          <td><a class="table" href="/genres/<%= @product.genre_id %>/show"><%= @product.genre.name %></td>
          </tr>
          <tr>
            <th scope="row">Record Label</th>
            <td><a class="table" href="/record-labels/<%= @product.record_label_id %>/show"><%= @product.record_label.name %></a></td>
          </tr>
          <tr>
            <th scope="row">Year</th>
            <td><%= @product.year.year %></td>
          </tr>
          <tr>
            <th scope="row">Format</th>
            <td><%= @product.format.type %></td>
          </tr>
          <tr>
            <th scope="row">Cost Price</th>
            <td><%= "%.2f" % @product.cost_price %></td>
          </tr>
          <tr>
            <th scope="row">Retail Price</th>
            <td><%= "%.2f" % @product.retail_price %></td>
          </tr>
          <tr>
            <th scope="row">Mark Up</th>
            <td><%= @product.markup %></td>
          </tr>
          <tr>
            <th scope="row">Quantity</th>
            <td><%= @product.quantity %></td>
          </tr>
          <tr>
            <th scope="row">Stock Level</th>
            <% if @product.quantity == 0 %>
              <td class="warning">out of stock</td>
              <% elsif @product.quantity <= 5 %>
              <td class="low">low stock</td>
              <% else %>
              <td class="in-stock">in stock
              <% end %></td>
            </tr>
        </table>
      </div>
      <div class="details-buttons">
        <table class="products-second">
            <tr>
              <td><form action="/products/<%= @product.id %>/edit" method="get">
                <input type="submit" value="Edit">
              </form></td>
            </tr>
            <tr>
              <td><form action="/products/<%= @product.id %>/delete" method="post">
                <input type="submit" value="Delete">
              </form></td>
            </tr>
            <tr>
              <td>
                <form action="/products" method="get">
                  <input type="submit" value="Back">
                </form>
              </td>
            </tr>
          </table>
        </div>
      </div>

    </div>

    <hr class="divider">
